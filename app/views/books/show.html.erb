<%= render 'users/user', user: @user%>
<%= render 'books/book', book: @newbook%>


<h1>Book details</h1>
<%= link_to user_path(@book.user.id) do%>
<p><%= image_tag @book.user.get_profile_image("40x40")%><br>
   <%= @book.user.name%> </p>
<%end%>
<p>Title:<%= link_to @book.title, book_path(@book.id)%></p>
<p>Opinion:<%= @book.opinion%></p>

<% if @book.user == current_user%>
  <%= link_to "Edit", edit_book_path(@book.id)%>
  <%= link_to "Destroy", book_path(@book), method: :delete%>
<%end%>