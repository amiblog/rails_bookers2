<%= render 'books/error', some: @book%>
<%= render 'users/user', user: @user%>
<%= render 'books/book', book: @book%>

<h1>Books</h1>
<% @books.each do |book|%>
<div>
  <%= link_to user_path(book.user.id) do%>
    <p><%= image_tag book.user.get_profile_image("40x40")%></p>
  <%end%>
  <p>Title:<%= link_to book.title, book_path(book.id)%></p>
  <p>Opinion:<%= book.opinion%></p>
</div>
<%end%>