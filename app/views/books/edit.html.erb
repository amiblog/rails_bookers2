<h1>Editing book</h1>
<%= render 'books/error', some: @book%>

<%= form_with model: @book, local:true do |f|%>

<h4>Title</h4>
<%= f.text_field :title%>

<h4>Opinion</h4>
<%= f.text_area :opinion%>

<%= f.submit "Update Book"%>

<%end%>

<%= link_to "Show", book_path(@book.id)%>
|
<%= link_to "Back", books_path%>
