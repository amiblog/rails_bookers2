 <h2>User info</h2>
    <%= image_tag user.get_profile_image("100x100")%>
    <table class = "table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= user.name%></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction%></th>
        </tr>
      </tbody>
    </table>
    <div class = "row">
      <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block",method: :get do %>
        <i class="fas fa-user-cog"></i>
      <%end%>
    </div>

 <h2 class = "mt-3">New book</h2>
    <%= form_with model: book, local:true do |f|%>
    <div class = "form-group">
      <label for = "book_title">Title</label>
      <div class = "text_field"><%= f.text_field :title, {class: "form-control"}%></div>
    </div>
    <div class = "form-group">
      <label for = "book_opinion">Opinion</label>
      <div class = "text_field"><%= f.text_area :body, {class: "form-control"}%></div>
    </div>
    <div class = "form-group">
      <div><%= f.submit "Create book", class: "btn btn-success"%></div>
    </div>

    <%end%>

